<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5F2EA0" />
            <gradient android:angle="-90" android:startColor="#5F2EA0" android:endColor="#512888"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#582b94" />
            <solid android:color="#512888"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#512888" />
            <gradient android:angle="-90" android:startColor="#512888" android:endColor="#5F2EA0" />
        </shape>
    </item>
</selector>