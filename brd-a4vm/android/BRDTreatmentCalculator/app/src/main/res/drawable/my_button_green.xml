<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#008000" />
            <gradient android:angle="-90" android:startColor="#007600" android:endColor="#0A8A0A"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#006C00" />
            <solid android:color="#006C00"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#008000" />
            <gradient android:angle="-90" android:startColor="#0A8A0A" android:endColor="#007600" />
        </shape>
    </item>
</selector>