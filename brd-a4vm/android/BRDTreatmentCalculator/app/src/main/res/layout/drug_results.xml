<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/results"
        android:textSize="24sp"
        />

    <TableLayout
        android:id="@+id/resultsTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultsTextView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                />

            <TextView
                android:id="@+id/tableDrug1NameTextView"
                android:layout_column="1"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/drug_1_header"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="2"
                />

            <TextView
                android:id="@+id/tableDrug2NameTextView"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:text="@string/drug_2_header"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="2"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableTfpLabel"
                android:layout_column="0"
                android:layout_weight="0.4"
                android:text="@string/treatment_failure_percent_short"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug1TfpTextView"
                android:layout_column="1"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug2TfpTextView"
                android:layout_column="2"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableCfrLabel"
                android:layout_column="0"
                android:layout_weight="0.4"
                android:text="@string/case_fatality_rate"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug1CfrTextView"
                android:layout_column="1"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug2CfrTextView"
                android:layout_column="2"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableCtLabel"
                android:layout_column="0"
                android:layout_weight="0.4"
                android:text="@string/cost_of_treatment"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug1CtTextView"
                android:layout_column="1"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug2CtTextView"
                android:layout_column="2"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tableCprLabel"
                android:layout_column="0"
                android:layout_weight="0.4"
                android:text="@string/chronic_percentage"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug1CprTextView"
                android:layout_column="1"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

            <TextView
                android:id="@+id/tableDrug2CprTextView"
                android:layout_column="2"
                android:layout_weight="0.3"
                android:layout_gravity="center"
                android:text="@string/number_temp_view"
                android:textSize="18sp"
                android:textAlignment="center"
                android:maxLines="1"
                />

        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/costPivotInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultsTable"
        android:paddingTop="10dp"
        android:text="@string/results_cost_diff_suggestion"
        android:textSize="18sp"
        />

</RelativeLayout>