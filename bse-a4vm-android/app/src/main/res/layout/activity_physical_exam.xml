<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.ksu.cis.a4vm.bse.PhysicalExam">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:fillViewport="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field1"
                android:hint="@string/phyExam1"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox1"
                android:layout_toRightOf="@id/field1"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field2"
                android:hint="@string/phyExam2"
                android:layout_below="@id/field1"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox2"
                android:layout_toRightOf="@id/field2"
                android:layout_below="@id/field1"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field3"
                android:hint="@string/phyExam3"
                android:layout_below="@id/field2"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox3"
                android:layout_toRightOf="@id/field3"
                android:layout_below="@id/field2"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field4"
                android:hint="@string/phyExam4"
                android:layout_below="@id/field3"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox4"
                android:layout_toRightOf="@id/field4"
                android:layout_below="@id/field3"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field5"
                android:hint="@string/phyExam5"
                android:layout_below="@id/field4"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox5"
                android:layout_toRightOf="@id/field5"
                android:layout_below="@id/field4"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field6"
                android:hint="@string/phyExam6"
                android:layout_below="@id/field5"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox6"
                android:layout_toRightOf="@id/field6"
                android:layout_below="@id/field5"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field7"
                android:hint="@string/phyExam7"
                android:layout_below="@id/field6"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox7"
                android:layout_toRightOf="@id/field7"
                android:layout_below="@id/field6"
                android:layout_marginRight="20dp"/>
            <EditText
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/field8"
                android:hint="@string/phyExam8"
                android:layout_below="@id/field7"
                android:layout_alignParentLeft="true" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox8"
                android:layout_toRightOf="@id/field8"
                android:layout_below="@id/field7"
                android:layout_marginRight="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/field9"
                android:text="Select all as normal"
                android:layout_below="@id/field8"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkbox9"
                android:layout_toRightOf="@id/field9"
                android:layout_below="@id/field8"
                android:layout_marginRight="20dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/savePhyExam"
                android:text="Save"
                android:layout_marginTop="30dp"
                android:layout_below="@id/field9"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
